<script id="tpl_chat" type="text/html">
    <div class="row-fluid">
        <ul class="nav nav-pills pull-left">
            <li>
                <a id="chat-force-refresh" href="#"><span><i class="icon-retweet"></i> Refresh</span></a>
            </li>
        </ul>
        <ul class="nav nav-pills pull-right">
            <li>
                <a id="chat-toggle-options" href="#" class="place-right"><span><i class="icon-cogs"></i> Options & Archives</span></a>
            </li>
        </ul>
    </div>
    <div id="chat-quick-settings" class="row-fluid">
        <div class="page-header">
            <h1>Quick Settings</h1>
        </div>
        <div class="page-content">
            <div class="span5">
                <form id="historical-chat-form">
                    <fieldset>
                        <legend>Load past history</legend>
                        <label for="chat-date">This will disable chat auto-refresh</label>
                        <input type="text" id="chat-date-input" name="chat-date" placeholder="Enter Date (DD/MM/YYYY)" />
                        <div class="control-group">
                            <button type="submit" id="load-archive" class="btn archive-btn">Load</button>
                            <button type="button" id="save-archive" class="btn archive-btn">Save</button>
                        </div>
                        <iframe id="download-chat-iframe" src="{{iframe_url}}" style="display:none"></iframe>
                    </fieldset>
                </form>
            </div>
            <div class="span7">
                <div id="chat-settings"></div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="page-header">
            <h1>Server Chat</h1>
        </div>
    </div>
    <div class="row-fluid">
        <div id="chat-contents" class="{{^show_server_msgs}}hide-server-msgs{{/show_server_msgs}}">
            <ul id="chat-contents-ul"></ul>
        </div>
    </div>
</script>

<script id="tpl_chat_messages" type="text/html">
    {{#.}}
        <li {{#Server}}class="server-message"{{/Server}}>
            [<span class="timestamp">{{MessageTimeStamp}}</span>]
            [<span class="team team-{{MessageType}}">{{MessageType}}</span>{{#SquadName}} <span class="team squad">{{SquadName}}</span>{{/SquadName}}]
            <span class="player-name">{{Speaker}}</span>:
            <span class="message">{{Text}}</span>
        </li>
    {{/.}}
</script>

