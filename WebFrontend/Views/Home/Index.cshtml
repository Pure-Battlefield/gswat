<script id="tpl_chat_settings" type="text/html">
    <h2>Chat</h2>
    <form id="chat-settings-form">
        <fieldset>
            <legend>Chat Display Settings</legend>
            <label id="chat-auto-refresh-field" class="checkbox">
                <input data-field="auto_refresh" type="checkbox" {{#auto_refresh}}checked{{/auto_refresh}}> Auto-refresh
            </label>
            <label id="chat-servers-msgs-field" class="checkbox">
                <input data-field="show_server_msgs" type="checkbox" {{#show_server_msgs}}checked{{/show_server_msgs}}> Show Server MSGs
            </label>
            <div class="control-group input-append">
                <label for="chat-interval">Refresh Interval in Seconds</label>
                <input id="chat-interval-field" name="chat-interval" data-field="interval" type="text" value="{{interval}}"/>
                <button type="submit" class="btn btn-primary submit">Submit</button>
            </div>
        </fieldset>
    </form>
</script>

<script id="tpl_server_settings" type="text/html">
    <h2>Server</h2>
    <form id="server-settings-form">
        <fieldset>
            <legend>Connection Settings</legend>
            <label for="ServerIP">Server IP</label>
            <input tabindex="1" name="ServerIP" data-field="server_ip" type="text" value="{{ServerIP}}"/>
            <div class="control-group">
                <label for="ServerPort">Server Port</label>
                <input tabindex="2" name="ServerPort" data-field="server_port" type="text" value="{{ServerPort}}"/>
            </div>
            <div class="control-group">
                <label for="Password">Server Password</label>
                <input tabindex="3" name="Password" data-field="server_password" type="text" value="{{Password}}"/>
            </div>
            <div class="control-group">
                <label for="OldPassword">Old Server Password</label>
                <input tabindex="4" name="OldPassword" data-field="server_old_password" type="text" value="{{OldPassword}}"/>
            </div>
            <button type="submit" class="btn btn-primary submit">Submit</button>
        </fieldset>
    </form>
</script>

