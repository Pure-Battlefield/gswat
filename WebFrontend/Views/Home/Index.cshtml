<script id="tpl_alert" type="text/html">
    <div class="container">
	    <div class="row-fluid">
		    <div class="alert alert-{{type}}">
			    <button class="close" type="button" data-dismiss="alert">&times;</button>
			    <strong>{{title}}</strong>
			    <span>{{message}}</span>
            </div>
        </div>
    </div>
</script>

<script id="tpl_confirm_dialogue" type="text/html">
    <div id="modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	    <div class="modal-header">
		    <button class="close" type="button" data-dismiss="modal" aria-hidden="true">×</button>
		    <h3 id="modal-title">{{title}}</h3>
        </div>
	    <div class="modal-body">
		    <p>{{message}}</p>
        </div>
        <div class="modal-footer">
		    <button class="btn btn-cancel" data-dismiss="modal" aria-hidden="true">Cancel</button>
		    <button class="btn btn-confirm btn-{{button}}">{{button-text}}</button>
        </div>
    </div>
</script>

