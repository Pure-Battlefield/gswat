<script id="tpl_chat" type="text/html">
    <div class="page">
        <div class="page-header">
            <h1>Server Chat</h1>
            <i class="icon-loop"></i> Refresh</a>
        </div>
        <div class="page-region">
            <div class="page-region-content">
                <div id="chatContents" class="bg-color-blueLight"></div>
            </div>
        </div>
        <div class="span4">
            <form id="historicalChatForm">
                <fieldset>
                    <legend>Load up past history</legend>
                    <div class="input-control text span3">
                        <input type="text" name="chatDate" id="chatDate" placeholder="Enter Date" />
                        <button class="helper"></button>
                    </div>
                    <input type="submit" id="loadByDay" value="Load"/>
                    <input type="button" id="saveByDay" value="Save"/>
                    <iframe id="chatFrame" style="display:none"></iframe>
                </fieldset>
            
                <script type="text/javascript">
                    $('#chatDate').datepicker({
                        dateFormat: 'mm/dd/yy'
                    });
                </script>
            </form>
        </div>
    </div>
</script>

<script id="tpl_chat_messages" type="text/html">
    {{#.}}
        <p>
            <span class="timestamp">{{MessageTimeStamp}}</span>
            <span class="team team-{{MessageType}}">{{MessageType}}</span>
            <span class="player-name">{{Speaker}}</span>
            <span class="message">{{Text}}</span>
        </p>
    {{/.}}
</script>

