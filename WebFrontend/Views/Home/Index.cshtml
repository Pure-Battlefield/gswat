<script id="tpl_chat_settings" type="text/html">
    <h2>Chat</h2>
    <form id="chat-settings-form">
        <fieldset>
            <legend>Chat Display Settings</legend>
            <label class="input-control switch">
                <input type="checkbox">
                <span class="helper">Auto-refresh</span>
            </label>
            <label class="input-control switch">
                <input type="checkbox">
                <span class="helper">Show Server MSGs</span>
            </label>
            <div class="input-control text">
                <input type="text" placeholder="Refresh Interval in Seconds"/>
                <button class="helper"></button>
            </div>
            <input type="submit" value="Submit" />
        </fieldset>
    </form>
</script>

<script id="tpl_server_settings" type="text/html">
    <h2>Server</h2>
    <form id="server-settings-form">
        <fieldset>
            <legend>Connection Settings</legend>
            <div class="input-control text">
                <input type="text" placeholder="Server IP"/>
                <button class="helper"></button>
            </div>
            <div class="input-control text">
                <input type="text" placeholder="Server Port"/>
                <button class="helper"></button>
            </div>
            <div class="input-control text">
                <input type="text" placeholder="Server Password"/>
                <button class="helper"></button>
            </div>
            <div class="input-control text">
                <input type="text" placeholder="Old Server Password"/>
                <button class="helper"></button>
            </div>
            <input type="submit" value="Submit" />
        </fieldset>
    </form>
</script>